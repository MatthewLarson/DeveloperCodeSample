@model Sample.Domain.Doughnut

@{
    ViewBag.Title = "Edit a Doughnut";
}

<h2>Edit a Doughnut</h2>

@using (Html.BeginForm("EditPost", "Doughnut", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <input type="hidden" name="doughnutId" value="@Model.Id" />

        <div class="form-group">
            <label class="control-label">Doughnut Name</label>
            <div class="col-md-12">
                <input type="text" name="doughnutName" value="@Model.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Flavor</label>
            <div class="col-md-12">
                <input type="text" name="flavorName" value="@Model.Flavor.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
