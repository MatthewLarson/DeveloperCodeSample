@model Sample.Domain.Doughnut

@{
    ViewBag.Title = "Create a Doughnut";
}

<h2>Create a Doughnut</h2>


@using (Html.BeginForm("CreatePost", "Doughnut", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label class="control-label">Doughnut Name</label>
            <div class="col-md-12">
                <input type="text" name="doughnutName" value="" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Flavor</label>
            <div class="col-md-12">
                <input type="text" name="flavorName" value="" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
